<HTML>
    <HEAD>
        <!-- sementic ui -->
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>	

        <script src="javascripts/Test.js" type="text/javascript"></script>		
        
        <TITLE>ShowContentPopup</TITLE>
    </HEAD>
    <BODY>
        <div style='width : 600px; height : 600px; font-size: 2rem; margin : 10%; overflow-y : scroll;'>
            <div class="inline field">
                <input id="title" type="text" style="width : 80%;" placeholder="title" maxLength="40" value="">
            </div>
            <br>
            
            <div class="inline field">
                <textarea style="overflow:auto; width:80%; height:50%;" placeholder="content" id="content" rows="5" cols="40"></textarea>
            </div>
            <br>
            
            <form id="uploadForm" method="post" action="/upload" enctype="multipart/form-data">
                이미지 선택 : 
                <input type="file" id="uploadFiles" name="uploadFiles" multiple style="width:80%;">
            </form>
            <br>

            <input type="button" style="width : 30%;" onclick="onPopupSaveClick()" class="ui primary button" value="Save">
            <input type="button" style="width : 30%;" onclick="onPopupCloseClick()" class="ui secondary button" value="Close">
        </div>
    </BODY>
</HTML>