<HTML>
    <HEAD>
        <!-- sementic ui -->
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>	

        <TITLE>EditContentPopup</TITLE>
    </HEAD>
    <BODY>
        <div style='width : 600px; height : 600px; font-size: 2rem; margin : 10%; overflow-y : scroll;'>

            <strong>idx : </strong>
            <label id="popup_edit_idx"></label>
            <br>

            <div class="inline field">
                <input id="popup_edit_title" type="text" style="width : 80%;" placeholder="title" maxLength="40" value="">
            </div>
            <br>
            
            <div class="inline field">
                <textarea id="popup_edit_content" style="overflow:auto; width:80%; height:50%;" placeholder="content" rows="5" cols="40"></textarea>
            </div>
            <br>

            <input type="button" style="width : 30%;" onclick="onPopupUpdateClick()" class="ui primary button" value="Update">
            <input type="button" style="width : 30%;" onclick="onPopupCloseClick()" class="ui secondary button" value="Close">
        </div>
    </BODY>
</HTML>